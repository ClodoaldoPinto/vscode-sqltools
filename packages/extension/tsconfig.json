{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "../../dist/extension",
        "sourceMap": true,
        "lib": [ "es6" ],
        "baseUrl": ".",
        "noEmit": true,
        "removeComments": true,
        "paths": {
            "@sqltools/extension/*":["./*"]
        }
    },
    "exclude": [
        "./test",
        "./node_modules",
        "./__mocks__",
        "./*.js"
    ]
}
