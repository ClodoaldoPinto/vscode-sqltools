{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noEmit": true,
    "outDir": "../../../dist/language-server",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "paths": {
      "@sqltools/language-server/*": ["./*"]
    }
  }
}
