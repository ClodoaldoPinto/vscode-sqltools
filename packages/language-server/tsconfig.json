{
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "../../dist/language-server",
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "paths": {
      "@sqltools/language-server/*": ["./*"]
    },
    "removeComments": true
  },
}
